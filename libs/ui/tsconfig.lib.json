{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/libs/ui",
    "types": [
      "node"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "../../dist/libs/ui",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "../../dist/out-tsc/libs/ui/tsconfig.lib.tsbuildinfo",
    "paths": {
      "@materials-accounting/types": ["../../libs/graphql/src/index.ts"]
    }
  },
  "files": [],
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}